{
  "manifest_version": 3,
  "name": "Tab Group Saver",
  "version": "1.0",
  "description": "Save open tabs as a group in Chrome",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}
